<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_centerInParent="true"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <!--信息提示用Toast-->


    <RelativeLayout
        android:id="@+id/control_layout"
        android:background="#93757676"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
            android:id="@+id/img_control"
            android:focusable="true"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/stop_icon"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:text="00:00:00"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/img_control"
            android:id="@+id/ybolo_tv_loadTime"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ybolo.szrearch.com.tvtest.mSeekBar
            android:focusable="true"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/ybolo_tv_loadTime"
            android:layout_toStartOf="@+id/ybolo_player_totleTime"
            android:id="@+id/seek_bar"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"  />

        <TextView
            android:text="00:00:00"
            android:textSize="14sp"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:id="@+id/ybolo_player_totleTime"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</RelativeLayout>